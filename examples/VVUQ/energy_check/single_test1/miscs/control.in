vdw_correction_hirshfeld_alkali
spin               none
relativistic       atomic_zora scalar

#k-points
k_grid	2	2	2

# SCF convergence
occupation_type    gaussian 0.01
mixer              pulay
n_max_pulay        8            # default value 8
charge_mix_param   0.2          # non-metallic conservative value

#sc_accuracy_eev    1E-3        # default not used
#sc_accuracy_rho    1E-6        # not specified: has own checking criteria // using default: 1E-6 * SQRT(N/6) 
#sc_accuracy_etot   1E-5	# default not used 
sc_accuracy_forces 1E-4	# default 'not_checked'
#sc_accuracy_forces not_checked  # not-checked: only relies on default 'rho' checker .. i.e., 'rho' should be better ?

sc_iter_limit   4000

